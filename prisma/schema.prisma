generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model Usuario {
  id               Int       @id @default(autoincrement())
  nombre           String
  apellido         String
  email            String    @unique
  contrasena       String
  confirmarContrasena String
  telefono         String?   @unique
  direccion        String?
  fechaNacimiento  DateTime?
  rol              Rol       @default(TURISTA)
  fechaCreacion    DateTime  @default(now())
  recuperacionContrasena RecuperacionContrasena[]
}

enum Rol {
  TURISTA
  GUIA
  ADMINISTRADOR
  BANEADO
}

model RecuperacionContrasena {
  id           Int       @id @default(autoincrement())
  usuarioId    Int
  usuario      Usuario   @relation(fields: [usuarioId], references: [id])
  codigoRecuperacionRecibidaResend   String  @unique
  contactoRecuperacion String  
  codigoRecuperacion   String?
  contraseUtilizada Boolean @default(false)
}


